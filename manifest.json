{
    "manifest_version": 2,
    "name" : "GitHub Graph LinkedIn Extension",
    "version" : "0.0.1",

    "web_accessible_resources":[
        "./*.css"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/in/*"
            ],

            "js" : [
                "foreground.js"
            ],
            "css" :[
                "github-calendar.css",
                "github-calendar-responsive.css"
            ]
        }
    ],


    "background":{
        "scripts": [ 
            "background.js"
         ]
    },

    "browser_action":{
        "default_icon":"./icon.png"
    },

    "permissions": [
        "webNavigation", 
        "*://*/*",
        "https://*/*"
    ]
}