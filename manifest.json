{
    "manifest_version": 2,
    "name" : "GitHub Graph LinkedIn Extension",
    "version" : "0.0.1",

    "web_accessible_resources":[
        "./*.css",
        "./github-calendar.min.js"
    ],
    
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/in/*"
            ],

            "js" : [
                "foreground.js"
            ]
        }
    ],

    "background":{
        "scripts": [ 
            "background.js"
         ]
    },
    "permissions": [ "webNavigation", "*://*/*" ],
    
    "browser_action":{
        "default_icon": "icon.png"
    }
}